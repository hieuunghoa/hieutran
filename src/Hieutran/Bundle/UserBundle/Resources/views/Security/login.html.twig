{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}
{% block stylesheets %}
    <link href="{{ asset('styles/css/bootstrap.css') }}" rel="stylesheet">
    <link href="{{ asset('styles/css/bootstrap-responsive.css') }}" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('styles/css/font-awesome.css') }}">

    <link href="{{ asset('styles/css/styles.css') }}" rel="stylesheet">
    <link href="{{ asset('styles/css/theme-wooden.css') }}" rel="stylesheet">

    <link href="{{ asset('styles/css/aristo-ui.css') }}" rel="stylesheet">
    <link href="{{ asset('styles/css/elfinder.css') }} =" rel="stylesheet">
    <link href='http://fonts.googleapis.com/css?family=Dosis' rel='stylesheet' type='text/css'>
    <!--fav and touch icons -->
    <link rel="shortcut icon" href="{{ asset('styles/ico/favicon.ico') }}">
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="{{ asset('styles/ico/apple-touch-icon-144-precomposed.png') }}">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="{{ asset('styles/ico/apple-touch-icon-114-precomposed.png') }}">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="{{ asset('styles/ico/apple-touch-icon-72-precomposed.png') }}">
    <link rel="apple-touch-icon-precomposed" href="{{ asset('styles/ico/apple-touch-icon-72-precomposed.png') }}">
{% endblock %}

{% block body %}
    <div class="layout">
        <div class="navbar navbar-inverse top-nav">
            <div class="navbar-inner">
                <div class="container">
                    <span class="home-link"><a href="#" class="icon-home"></a></span><a class="brand" href="#"><img src="{{ asset('styles/images/logo-falgun.png') }}" width="103" height="50" alt="Falgun"></a>
                </div>
            </div>
        </div>

        <div class="container">
            {% if error %}
                <div class="alert alert-error">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    <i class="icon-exclamation-sign"></i>Login failed, did you provide an invalid username and/or password?
                </div>
            {% endif %}
            <form class="form-signin"  action="{{ path("fos_user_security_check") }}" method="post">
                <h3 class="form-signin-heading">Please sign in</h3>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

                <div class="controls input-icon">
                    <i class=" icon-user-md"></i>
                    <input type="text" id="username" class="input-block-level" name="_username" value="{{ last_username }}" required="required" placeholder="Email address">
                </div>

                <div class="controls input-icon">
                    <i class=" icon-key"></i>
                    <input type="password" id="password" name="_password" required="required" class="input-block-level" placeholder="Password">
                </div>

                <label class="checkbox">
                    <input type="checkbox" id="remember_me" name="_remember_me" value="on">
                    Remember me
                </label>
                <button class="btn btn-success btn-block" type="submit" id="_submit" name="_submit">Sign in</button>

                <h4>Forgot your password ?</h4>
                <p><a href="#">Click here</a> to reset your password.</p>
            </form>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('styles/js/jquery.js') }}"></script>
    <script src="{{ asset('styles/js/jquery-ui-1.10.1.custom.min.js') }}"></script>
    <script src="{{ asset('styles/js/bootstrap.js') }}"></script>
{% endblock %}